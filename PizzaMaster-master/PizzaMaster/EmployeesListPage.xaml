<Page
    x:Class="PizzaMaster.EmployeesListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PizzaMaster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Name="editButton" Label="Change" Icon="Edit" Click="editButton_Click"></AppBarButton>
            <AppBarButton x:Name="deleteButton" Label="Delete" Icon="Delete" Click="deleteButton_Click"></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox Name="nameBox" PlaceholderText="Full name" Margin="10"></TextBox>
            <TextBox Name="agesBox" PlaceholderText="Ages" Margin="10"></TextBox>
            <ComboBox x:Name="positionsList" PlaceholderText="Position" Margin="10"></ComboBox>
            <TextBox Name="salaryBox" PlaceholderText="Salary" Margin="10"></TextBox>

            <Button Content="Add" Click="Add_Click" Margin="10"></Button>
            <Button Content="Back" Click="Back_Click" Margin="10"></Button>
        </StackPanel>
        
        <TextBlock FontSize="32" Name="titleText"  Text="Location" Grid.Row="1"></TextBlock>
        <ListView x:Name="employeesList" Grid.Row="2" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:Employee">
                    <StackPanel>
                        <TextBlock FontSize="16" Text="{x:Bind FullName}"></TextBlock>
                        <TextBlock FontSize="16" Text="{x:Bind Ages}"></TextBlock>
                        <TextBlock FontSize="16" Text="{x:Bind Position}"></TextBlock>
                        <TextBlock FontSize="16" Text="{x:Bind Salary}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
